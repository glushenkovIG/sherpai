# SherpaAI Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/sherpai

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d

# API Keys (as needed)
# OPENAI_API_KEY=your_openai_key_here
# HUGGINGFACE_API_KEY=your_huggingface_key_here

# Feature Flags
ENABLE_SOCIAL_ENGINEERING_PROTECTION=true
ENABLE_SOCIAL_MAXIMIZER=true
ENABLE_ANALYTICS=true 